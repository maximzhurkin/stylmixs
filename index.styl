column(count)
  if count == 12
    width 100%
  if count == 11
    width 91.66%
  if count == 10
    width 83.33%
  if count == 9
    width 75%
  if count == 8
    width 66.66%
  if count == 7
    width 58.33%
  if count == 6
    width 50%
  if count == 5
    width 41.66%
  if count == 4
    width 33.33%
  if count == 3
    width 25%
  if count == 2
    width 16.66%
  if count == 1
    width 8.333%

placeholder()
  &::-webkit-input-placeholder
    {block}
  &:-moz-placeholder
    {block}
  &::-moz-placeholder
    {block}
  &:-ms-input-placeholder
    {block}

gap(gap)
  padding-left gap
  padding-right gap

pad(gap)
  padding-top gap
  padding-bottom gap

fs(size, height)
  font-size (size / 16em)
  line-height (height / size)em

overlay()
  content ''
  display block
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  {block}

hidebox()
  position absolute
  z-index -1000
  overflow  hidden
  clip rect(0 0 0 0)
  height 1px
  width 1px
  margin -1px
  padding 0
  border 0

mq(display)
  condition = 'screen and (max-width: %s)' % display
  @media condition
    {block}

fface(name, font, weight, style)
  @font-face
    font-family name
    src url(font+'.woff2') format('woff2'),
        url(font+'.woff') format('woff'),
        url(font+'.ttf') format('truetype')
    font-weight weight
    font-style style
    font-display swap

ts()
  items = ()

  for argument in arguments
    push(items, s('%s .25s ease-in-out', argument))

  transition unquote(join(', ', items))

ratio(width, height)
  padding-bottom (height / (width / 100))%
  height 0
